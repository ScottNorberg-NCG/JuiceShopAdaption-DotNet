@{
    ViewData["Title"] = "Order History";
}

@model List<JuiceShopDotNet.Unsafe.Data.Order>

<h1 class="box-shadow">Order History</h1>

<div>
    <table>
        <tr>
            <th>Order Date</th>
            <th>Amount</th>
            <th>Credit Card</th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr><td colspan="3">No orders completed</td></tr>    
        }
        else
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>
                        <a href="/Shopping/Details/@order.OrderID">$@order.AmountPaid</a>
                    </td>
                    <td>Last 4 digits: @order.CreditCardNumber.Substring(order.CreditCardNumber.Length - 4)</td>
                </tr>
            }
        }
    </table>
</div>