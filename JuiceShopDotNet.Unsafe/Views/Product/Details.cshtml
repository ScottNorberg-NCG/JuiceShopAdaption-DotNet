@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Product - " + Model.name;
}

@model Product
@inject SignInManager<IdentityUser> SignInManager

<h1 class="box-shadow">@Model.name</h1>

<form action="/Shopping/AddToCart">
    <input name="ProductID" id="ProductID" value="@Model.id" type="hidden" />
    <input id="Price" name="Price" value="@(Model.deluxePrice ?? Model.price)" type="hidden" />
    <div class="product-detail">
        <div class="image">
            <img src="~/images/products/@Model.image" alt="@Model.name" />
        </div>
        <div class="description">
            <h2>@Model.name</h2>
            <p>@Html.Raw(Model.description)</p>
            @if (Model.deluxePrice.HasValue)
            {
                <div class="price-overridden">Original price: $@Model.price</div>
                <div class="price-sale">On sale for: $@Model.deluxePrice</div>
            }
            else
            {
                <div class="price">Price: $@Model.price</div>
            }

            @if (SignInManager.IsSignedIn(User))
            {
                <div>Quantity: 
                    <select id="quantity" name="quantity">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                    </select>
                </div>
                <div><button>Add To Cart</button></div>
            }
        </div>
    </div>
</form>

